{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "tests/**/*", "dapp/**/*", "deployment-dapp/**/*"],
  "exclude": ["node_modules"]
}
