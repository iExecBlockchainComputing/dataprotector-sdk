{
  "name": "sharing-contracts",
  "description": "The sharing contract is a contract adding governance and monetization on iexec assets",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://github.com/iExecBlockchainComputing/content-creator-contracts.git#readme",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "npx hardhat clean && npx hardhat compile",
    "verify": "npx hardhat verify",
    "script:prod": "npx hardhat run ./scripts/deploy.js",
    "script:test": "npx hardhat run ./scripts/deploy.js",
    "test": "npx hardhat test",
    "uml": "npm run sol-to-uml && npm run storage-to-diagrams",
    "sol-to-uml": "zx tools/sol-to-uml.js",
    "storage-to-diagrams": "zx tools/storage-to-diagrams.js",
    "lint": "solhint contracts/*.sol && eslint .",
    "format": "prettier --plugin=prettier-plugin-solidity --write \"{scripts,test,contracts}/**/*.{ts,sol}\"",
    "check-format": "prettier --plugin=prettier-plugin-solidity --check \"{scripts,test,contracts}/**/*.{ts,sol}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iExecBlockchainComputing/content-creator-contracts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/contracts": "^5.0.1",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "hardhat": "^2.19.3",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-solidity": "^1.2.0",
    "sol2uml": "2.5.6",
    "zx": "^7.2.3"
  },
  "dependencies": {
    "ethers": "^6.9.1",
    "iexec": "^8.5.0"
  }
}
