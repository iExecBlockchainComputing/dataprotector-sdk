{
  "name": "sharing-contracts",
  "description": "The sharing contract is a contract adding governance and monetization on iexec assets",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://github.com/iExecBlockchainComputing/dataprotector-sdk/blob/v2/packages/sharing-smart-contract/README.md",
  "scripts": {
    "postinstall": "forge install",
    "clean": "hardhat clean",
    "compile": "npx hardhat clean && npx hardhat compile && npm run artifact-to-abis",
    "verify": "npx hardhat verify",
    "deploy": "npm run compile && npx hardhat run ./scripts/deploy.js",
    "upgrade": "npx hardhat run ./scripts/upgrade.js",
    "fillContracts": "npx hardhat run ./scripts/fillCollection.js",
    "test": "npx hardhat test",
    "uml": "npm run sol-to-uml && npm run storage-to-diagrams",
    "sol-to-uml": "zx tools/sol-to-uml.js",
    "storage-to-diagrams": "zx tools/storage-to-diagrams.js",
    "artifact-to-abis": "node tools/artifacts-to-abis.mjs",
    "lint": "solhint contracts/*.sol && eslint .",
    "format": "prettier --plugin=prettier-plugin-solidity --write \"{scripts,test,contracts}/**/*.{ts,sol}\"",
    "check-format": "prettier --plugin=prettier-plugin-solidity --check \"{scripts,test,contracts}/**/*.{ts,sol}\"",
    "fuzzing": "",
    "static-analyzer": "slither ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iExecBlockchainComputing/dataprotector-sdk/blob/v2/packages/sharing-smart-contract"
  },
  "pre-commit": [
    "uml"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "hardhat": "2.20.1",
    "hardhat-contract-sizer": "^2.10.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "sol2uml": "2.5.6",
    "zx": "^7.2.3"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "ethers": "^6.11.1",
    "iexec": "^8.6.1"
  }
}
