{
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["scripts/**/*.js", "test/**/*.js", "hardhat.config.cjs"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true
          }
        ],
        "import/prefer-default-export": ["off", { "target": "any" }],
        "import/extensions": ["error", "always"]
      }
    },
    {
      "files": ["test/**/*.js"],
      "globals": {
        "describe": "readonly",
        "it": "readonly"
      }
    },
    {
      "files": ["tools/**/*.js"],
      "rules": {
        "no-undef": "warn"
      }
    }
  ]
}
